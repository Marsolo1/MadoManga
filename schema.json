{
  "libraries.libraries": {
    "transaction": true,
    "partition-key": [
      "library_id"
    ],
    "columns": {
      "library_id": "INT",
      "library_name": "TEXT",
      "return_delay": "INT"
    }
  },
  "libraries.books_available": {
    "transaction": true,
    "partition-key": [
      "book_name"
    ],
    "clustering-key": [
      "library_id",
      "chapter"
    ],
    "columns": {
      "book_name": "TEXT",
      "library_id": "INT",
      "chapter": "INT",
      "qty_available": "INT"
    }
  },
  "libraries.loans": {
    "transaction": true,
    "partition-key": [
      "user_id"
    ],
    "clustering-key": [
      "loan_id"
    ],
    "columns": {
      "user_id": "INT",
      "loan_id": "INT",
      "start_date": "TEXT",
      "limit_date": "TEXT",
      "return_date": "TEXT",
      "loaned": "BOOLEAN"
    }
  },
  "users.users": {
    "transaction": true,
    "partition-key": [
      "user_id"
    ],
    "columns": {
      "user_id": "INT",
      "user_name": "TEXT"
    }
  },
  "users.books": {
    "partition-key": [
      "book_name"
    ],
    "columns": {
      "book_name": "TEXT",
      "author": "TEXT",
      "genre": "TEXT",
      "summary": "TEXT"
    }
  }
}
